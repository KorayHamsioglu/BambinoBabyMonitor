<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baby_lilac"
    >

    <TextView
        android:id="@+id/textViewMusicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MUSÄ°C"
        android:layout_marginVertical="10dp"/>
    <ImageButton
        android:id="@+id/musicPlayButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_baseline_play_circle_filled_24"/>
    <ImageButton
        android:id="@+id/musicStopButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_baseline_pause_circle_filled_24"
        android:visibility="invisible"/>

</RelativeLayout>